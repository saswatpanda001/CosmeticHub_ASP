@model CosmeticHub.Models.User

@{
    ViewData["Title"] = "AdminLogin";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>AdminLogin</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <script type="text/javascript">
        function preventBack() {
            window.history.forward();
        }
        setTimeout("preventBack()", 0);
        window.onunload = function () { null };
    </script>
    <style>
        body {
            background: linear-gradient(135deg, #f9c1d9, #f8e1f4); /* Soft gradient for a luxurious feel */
            font-family: 'Georgia', serif;
        }

        .form-container {
            background-color: white;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            border-radius: 15px;
        }

        .form-header {
            font-family: 'Cursive', sans-serif;
            color: #d88fb1; /* Soft pink */
            font-size: 2rem;
        }

        .input-field {
            border-radius: 10px;
            border: 1px solid #e2c1d3;
        }

        .btn {
            background-color: #d88fb1;
            color: white;
            font-weight: bold;
            border-radius: 30px;
            transition: all 0.3s ease;
        }

            .btn:hover {
                background-color: #f7a7c3;
                transform: translateY(-3px);
            }

        .link {
            color: #d88fb1;
            font-weight: bold;
            text-decoration: none;
        }

            .link:hover {
                text-decoration: underline;
            }

        .error-message {
            color: #f44336;
            font-weight: bold;
        }
    </style>
</head>
<body class="py-12 flex justify-center items-center h-screen">

    <div class="form-container p-8 w-full max-w-lg">
        <h2 class="form-header text-center mb-6">ADMINLOGIN</h2>

        <form method="post" class="space-y-6">
            <div class="mb-4">
                <label for="username" class="block text-lg text-gray-700">Username</label>
                <input type="text" id="username" name="username" class="input-field mt-2 p-3 w-full" required />
            </div>

            <div class="mb-4">
                <label for="password" class="block text-lg text-gray-700">Password</label>
                <input type="password" id="password" name="password" class="input-field mt-2 p-3 w-full" required />
            </div>

            <button type="submit" class="btn w-full py-3">Login</button>


             <p class="mt-4 text-center text-gray-600">
                Want to go to the user login page <a href="@Url.Action("Login", "Accounts")" class="link">Click here</a>.
            </p>


            @if (ViewBag.Error != null)
            {
                <div class="error-message mt-3 text-center">
                    @ViewBag.Error
                </div>
            }

          
        </form>
    </div>

</body>
</html>
