@model IEnumerable<CosmeticHub.Models.Review>
@{
    ViewData["Title"] = "Create";
    Layout = "_UserLayout";
}

<div class="container mx-auto p-6">
        <h1 class="text-3xl font-bold text-center mb-6">My Reviews</h1>

        @if (!Model.Any())
        {
            <div class="text-center text-gray-500">
                <p>You have not submitted any reviews yet.</p>
            </div>
        }
        else
        {
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                @foreach (var review in Model)
                {
                    <div class="bg-white p-4 rounded-lg shadow-md">
                        <h2 class="text-lg font-semibold text-blue-600">Review ID: @review.ReviewId</h2>
                        <h2 class="text-lg font-semibold text-blue-600">Product: @review.ProductId</h2>
                        <p class="mt-2 text-gray-700"><strong>Rating:</strong> @review.Rating</p>
                        <p class="mt-2 text-gray-700"><strong>Comment:</strong> @(string.IsNullOrEmpty(review.Comment) ? "No Comment" : review.Comment)</p>

                        <p class="mt-4 text-sm text-gray-500">Submitted on: @review.CreatedAt?.ToString("f")</p>
                    </div>
                }
            </div>
        }
    </div>


