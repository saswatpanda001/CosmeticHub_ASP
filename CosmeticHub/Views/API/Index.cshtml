@{
    ViewData["Title"] = "NewsAPI";
    Layout = "_UserLayout";
}


<div class="container mx-auto my-8">
    <h1 class="text-3xl font-semibold text-center mb-6">Latest News</h1>

    @foreach (var article in Model)
    {
        <div class="bg-white shadow-lg rounded-lg p-4 mb-6">
            <img src="@article["image_url"]" alt="News Image" class="max-w-[70%] mx-auto h-48 object-cover rounded-lg">
            <h3 class="text-xl font-semibold text-gray-900 mt-4">@article["title"]</h3>
            <p class="text-gray-700 mt-2">@article["description"]</p>
            <p class="text-gray-600 mt-2">Published on: @article["published_at"]</p>
            <a href="@article["url"]" target="_blank" class="text-blue-500 mt-4 inline-block">Read more...</a>
        </div>
    }
</div>

