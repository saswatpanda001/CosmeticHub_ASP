@model IEnumerable<CosmeticHub.Models.Order>


@{
    ViewData["Title"] = "DisplayUserOrders";
    Layout = "_UserLayout";
}


    <div class="container mx-auto p-4">
        <h1 class="text-3xl font-bold text-center mb-6">Your Orders</h1>

        @if (Model.Any())
        {
            <table class="min-w-full table-auto bg-white shadow-md rounded-lg">
                <thead>
                    <tr>
                        <th class="px-4 py-2 text-left">Order ID</th>
                        <th class="px-4 py-2 text-left">Total Price</th>
                        <th class="px-4 py-2 text-left">Order Status</th>
                        <th class="px-4 py-2 text-left">Shipping Address</th>
                        <th class="px-4 py-2 text-left">Placed At</th>
                        <th class="px-4 py-2 text-left">Shipped At</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var order in Model)
                    {
                        <tr class="border-b">
                            <td class="px-4 py-2">@order.OrderRec</td>
                            <td class="px-4 py-2">@order.TotalPrice.ToString("C")</td>
                            <td class="px-4 py-2">@order.OrderStatus</td>
                            <td class="px-4 py-2">@order.ShippingAddress</td>
                            <td class="px-4 py-2">@order.PlacedAt?.ToString("MM/dd/yyyy")</td>
                            <td class="px-4 py-2">@order.ShippedAt?.ToString("MM/dd/yyyy")</td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p class="text-center text-xl text-gray-600">You have no orders yet.</p>
        }
    </div>
